<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.PickingApp" parent="Theme.MaterialComponents.DayNight">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/colorAccent</item>
		<item name="colorSecondaryVariant">@color/colorAccentDark</item>
		<item name="colorOnSecondary">@color/white</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
		<item name="actionBarStyle">@style/WhiteActionBar</item>
	</style>

	<!-- Changing background and foretext color for action bar-->
	<style name="WhiteActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
		<item name="background">@color/white</item>
		<item name="toolbarStyle">@style/PrimaryTextActionBar</item>
	</style>

	<style name="PrimaryTextActionBar" parent="@style/Widget.MaterialComponents.Toolbar">
		<item name="titleTextColor">@color/colorPrimary</item>
	</style>

	<!-- No action bar-->
	<style name="Theme.PickingApp.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.PickingApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.PickingApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>